# Auto detect text files and perform LF normalization
* text=auto

# Ensure shell scripts always use LF line endings (for Docker/Linux compatibility)
*.sh text eol=lf

# Ensure other common files use appropriate line endings
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.sql text eol=lf

# Windows-specific files can use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
